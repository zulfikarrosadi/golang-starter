logging {
	level = "debug"
	format = "logfmt"
}

loki.source.file "app_log" {
	targets = [{"__path__" = "/var/log/app.log"}]
	forward_to = [loki.write.grafana_loki.receiver]
}

loki.write "grafana_loki" {
	endpoint {
		url = "http://host.docker.internal:3100/loki/api/v1/push"
	}
	external_labels = {
		job = "template_go",
	}
}

